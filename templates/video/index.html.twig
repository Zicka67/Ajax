{% extends 'base.html.twig' %}

{% block title %}Liste des vidéos{% endblock %}

{% block body %}

<div class="container mt-5 mb-5" style="max-width: 800px">
    <div class="row">
        <div class="card p-3">
            <div class="col">
                {{ form(form, { 'attr' : { 'id': 'form_video' }}) }}            
            </div>
        </div>
        {% if response %}
            <div class="alert alert-success mt-3">
                La vidéo a été ajoutée avec succès !
            </div>
        {% endif %}
    </div>
</div>

{% endblock %}
